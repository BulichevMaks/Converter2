<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1B22"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/q"
        android:layout_marginTop="2dp"
        android:background="#45009688"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_weight="2"

            android:textColor="#ffffff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/buttonDin"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/dinara"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#2196F3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/q"
        android:layout_marginTop="@dimen/ql"
        android:background="#45009688"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"

            android:textColor="#ffffff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/buttonRub"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            android:text="@string/rubli"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:backgroundTint="#2196F3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/q"
        android:layout_marginTop="@dimen/ql"
        android:background="#45009688"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_weight="2"

            android:textColor="#ffffff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/buttonLir"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"

            android:text="@string/lira"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:backgroundTint="#2196F3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/q"
        android:layout_marginTop="@dimen/ql"
        android:background="#45009688"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUsd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_weight="2"

            android:textColor="#ffffff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/buttonUsd"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"

            android:text="@string/usd"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:backgroundTint="#2196F3" />

    </LinearLayout>

        <EditText
            android:id="@+id/editText"
            android:background="#45009688"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginTop="53dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:inputType="number" />

</LinearLayout>